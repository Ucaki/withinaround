generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model workshop {
  id          Int   @id @default(autoincrement())
  name       String
  description String
  date      DateTime @db.Date
  time       String
  location   String
  slug       String @unique
  image       String
  registrationUrl String
  createdAt   DateTime @default(now())
}